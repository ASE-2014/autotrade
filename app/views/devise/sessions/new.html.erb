<h2>Log in</h2>

<%= form_for(resource, as: resource_name, class: "form-group", url: session_path(resource_name)) do |f| %>
  <p><div><%= f.label :email %><br />
    <%= f.email_field :email, class: "form-control", autofocus: true %></div>
  </p>
  <p>
    <div><%= f.label :password %><br />
    <%= f.password_field :password, class: "form-control", autocomplete: "off" %></div>
    </p>
  <p>
  </p>
    <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>
    </p>

    <div style="float: left; width: auto;">
        <div><%= f.submit "Sign In", class: "btn btn-success" %></div>
    </div>
<% end %>
<div style="float: left; width: 10px;"><p>&nbsp;</p>
</div>
<div style="float: left; width: auto;">
    <%= button_to 'Sign up', new_user_registration_path, method: :get, class: "btn btn-primary" %>
</div>
<div style="float: right; width: auto;">
    <%= button_to 'Discard', root_path, method: :get, class: "btn btn-warning" %>
</div>