<h1 class="logo text-center"><%= fa_icon "car" %> <strong>AUTOTRADE</strong></h1>
<div class="col-md-12">
    <div class="modal-dialog" style="margin-bottom:0">
        <div class="modal-content">
            <div class="panel-heading">
                <h2>Sign In</h2>
            </div>
            <div class="panel-body">
                <%= form_for(:user, :url => session_path(:user)) do |f| %>
                    <fieldset>
                        <div class="form-group">
                            <%= f.email_field :email, autofocus: true, class: "form-control" %>
                        </div>
                        <div class="form-group">
                            <%= f.password_field :password, class: "form-control" %>
                        </div>
                        <div class="checkbox">
                            <label>
                                <%= f.check_box :remember_me %> Remember me
                            </label>
                        </div>
                        <div style="float: left; width: auto;">
                            <%= f.submit 'Sign in', class: "btn btn-success" %>
                        </div>
                        <div style="float: left; width: 10px;"><p>&nbsp;</p>
                        </div>
                    <% end %>

                    <div style="float: left; width: auto;">
                            <%= button_to 'Sign up', new_user_registration_path, method: :get, class: "btn btn-primary" %>
                        </div>
                    </fieldset>
                    <p><br><%= link_to "Forgot your password?", new_password_path(:user) %></p>
            </div>
        </div>
    </div>
</div>