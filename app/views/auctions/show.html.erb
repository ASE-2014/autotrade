<h2>Auction</h2>
<p>
    <strong>Title:</strong>
    <%= @auction.title %>
</p>
<p>
    <strong>Description:</strong>
    <%= @auction.description %>
</p>
<p>
    <strong>Time remaining:</strong>
    <%= time_remaining>0 ? ((time_remaining/60).floor).to_s + " minutes " + ((time_remaining%60).round).to_s + " seconds" : "Auction finished" %>
</p>
<hr>
<h2>Bids</h2>
<p>
    <strong>Current Price:</strong>
    <%= @auction.price %>
</p>
<p>
    <strong>Current Bidder:</strong>
    <%= @bidder.nil? ? '-' : @bidder.username %>

</p>
<hr>
<p>
    <strong>All bids:</strong>
</p>
<%= render @bids %>
<hr>
<% unless is_own_auction? or time_remaining<0 %>
<h2>Place a bid</h2>
<%= render "bids/form" %>
<hr>
<% end %>
<%= link_to 'Back to Auctions', auctions_path %>