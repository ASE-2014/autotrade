<h1>All Auctions</h1>
<%= link_to 'New auction', new_auction_path %>
<table>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Price</th>
        <th>Owner</th>
        <th colspan="3"></th>
    </tr>

    <% @auctions.each do |auction| %>
        <tr>
            <td><%= auction.title %></td>
            <td><%= auction.description %></td>
            <td><%= auction.price %></td>
            <td><%= auction.user.username %></td>

            <td><%= link_to 'Show', auction_path(auction) %></td>
            <!--<td><%= link_to 'Edit', edit_auction_path(auction) %></td>
            <td><%= link_to 'Destroy', auction_path(auction),
                            method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        </tr>
    <% end %>
</table>
<%= link_to 'Back to Home', root_path %>
